<Window x:Class="Wpf_DLL_Injector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_DLL_Injector"
        mc:Ignorable="d"
        Title="DLL Injector" Height="151" Width="363"
        ResizeMode="NoResize"
        Background="#72C0F9">
    <Grid Margin="0,0,10,0">
        <Grid Margin="10,10,0,0">
            <Label Content="Target EXE:" HorizontalAlignment="Left" Margin="20,5,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TargetExeTextBox" HorizontalAlignment="Left" Margin="91,9,0,0" VerticalAlignment="Top" Width="138"/>

            <Label Content="Hook DLL:" HorizontalAlignment="Left" Margin="25,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.463,0.609"/>
            <TextBox x:Name="HookDllTextBox" HorizontalAlignment="Left" Margin="91,32,0,0" VerticalAlignment="Top" Width="138" IsReadOnly="True"/>
            <Button Content="Browse..." HorizontalAlignment="Left" Margin="234,32,0,0" VerticalAlignment="Top" Width="80" Click="BrowseButton_Click"/>

            <Button x:Name="injectButton" Content="DLL 주입하기 💉" HorizontalAlignment="Left" Margin="20,58,0,0" VerticalAlignment="Top" Width="294" Click="InjectButton_Click"/>
        </Grid>
    </Grid>
</Window>
